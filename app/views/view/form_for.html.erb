<%# form_forは特定のモデルを生成するためのメソッド %>
<%# Bookモデルを利用しているのでオブジェクト名を明記する必要がない。 %>
<%# コントローラーで@bookがテンプレート変数として定義されている。 %>
<%= form_for(@book) do |f| %>
  <div class="field">
    <%= f.label :isbn %><br />
    <%= f.text_field :isbn, size: 25 %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, size: 25 %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, size: 25 %>
  </div>
  <div class="field">
    <%= f.label :publish %><br />
    <%= f.text_field :publish, size: 25 %>
  </div>
  <div class="field">
    <%= f.label :published %><br />
    <%= f.text_field :published, size: 25 %>
  </div>
  <div class="field">
    <%= f.label :dl %><br />
    <%= f.text_field :dl, size: 25 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
